@model List<BookingApiViewModel.Result>
@{
    Layout = null;
    int count = 0;
}
<div class="container">
    <br />
@using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
{
            <label>Şehir Adını Giriniz</label>
                <input type="text" class="form-control" name="cityId"/>
            <br />
            <button class="btn btn-outline-primary">Şehir için Otel Bul'</button>
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Otel Detayları</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
                <tr>
                        <td>@count</td>
                        <td>@item.name</td>
                        <td>@item.reviewScore</td>
                        <td><a href="#" class="btn btn-outline-dark">Detaylar</a> </td>
                    </tr>
        }
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
