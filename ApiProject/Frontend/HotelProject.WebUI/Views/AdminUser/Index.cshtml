@model List<ResultAppUserDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th> # </th>
            <th> Ad Soyad </th>
            <th>Çalıştığı Şube</th>
            <th>Şehir</th>
            <th> Ülke </th>
            <th> Cinsiyet </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""></td>
                <td> @item.Name  @item.Surname </td>
                <td> @item.WorkLocation.WorkLocationName</td>
                <td> @item.City </td>
                <td><span> @item.Country </span></td>
                @if (item.Gender == "Erkek")
                {
                    <td><i class="fa fa-circle-o text-success  mr-2"></i> @item.Gender </td>

                }
                else
                {
                    <td><i class="fa fa-circle-o text-danger  mr-2"></i> @item.Gender </td>
                }

            </tr>
        }
    </tbody>
</table>
<a href="#" class="btn btn-outline-primary">Yeni Kullanıcı Ekle</a>

