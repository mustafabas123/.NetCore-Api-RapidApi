@model AdminMalViewModel


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <label>Alıcı Mail Adresi</label>
    <input type="email" class="form-control" asp-for="ReceiverMail"/>
    <br />

    <label>Konu</label>
    <input type="text" class="form-control" asp-for="Subject"/>
    <br />

    <label> Mesajınız </label>
    <textarea class="form-control h-150px" rows="6" asp-for="Body" ></textarea>   
    <br />
    <button class="btn btn-outline-info">Mail Gönder</button>
</form>
