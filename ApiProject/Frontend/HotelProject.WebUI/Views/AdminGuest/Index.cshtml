@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th> # </th>
            <th> Ad   </th>
            <th> Soyad  </th>
            <th> Şehir </th>
            <th> Sil </th>
            <th> Güncelle </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GuestId</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
                <td><a href="/AdminGuest/DeleteGuest/@item.GuestId/" class="btn btn-outline-warning"> Sil </a></td>
                <td><a href="/AdminGuest/UpdateGuest/@item.GuestId/" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/AdminGuest/AddGuest/" class="btn btn-outline-primary">Misafir Ekle</a>


