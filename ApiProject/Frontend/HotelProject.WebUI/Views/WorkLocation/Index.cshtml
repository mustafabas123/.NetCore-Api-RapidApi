@model List<ResultWorkLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Loksayon Adı</th>
        <th> Şehir </th>
        <th> Sil </th>
        <th> Güncelle </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.WorkLocationId</td>
            <td>@item.WorkLocationName</td>
            <td>@item.WorkLocationCity</td>
            <td><a href="/WorkLocation/DeleteWorkLocation/@item.WorkLocationId" class="btn btn-outline-danger"> Sil </a></td>
            <td><a href="/WorkLocation/UpdateWorkLocation/@item.WorkLocationId" class="btn btn-outline-info"> Güncelle </a></td>
        </tr>
    }
</table>

<a href="/WorkLocation/AddWorkLocation/" class="btn btn-outline-primary">Lokasyon Ekle  </a>
