@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Personel Ad</th>
            <th>Personel Unvan</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StaffId</td>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td><a href="/Staff/DeleteStaff/@item.StaffId/" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Staff/UpdateStaff/@item.StaffId/" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a href="#" class="btn btn-outline-info">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Staff/AddStaff/" class="btn btn-outline-primary">Personel Ekle</a>