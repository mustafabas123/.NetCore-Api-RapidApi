@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Oda Numarası</th>
            <th>Fiyat</th>
            <th>Başlık</th>
            <th>Yatak Sayısı</th>
            <th>Banyo Sayısı</th>
            <th>Wifi</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RoomId</td>
                <td>@item.RoomNumber</td>
                <td>@item.Price</td>
                <td>@item.Title</td>
                <td>@item.BedCount</td>
                <td>@item.BathCount</td>
                <td>@item.Wifi</td>
                <td><a href="/AdminRoom/DeleteRoom/@item.RoomId/" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/AdminRoom/UpdateRoom/@item.RoomId/" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/AdminRoom/AddRoom/" class="btn btn-outline-primary">Oda Ekle</a>
