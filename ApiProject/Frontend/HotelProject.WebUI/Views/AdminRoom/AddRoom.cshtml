@model CreateRoomDto
@{
    ViewData["Title"] = "AddRoom";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@using (Html.BeginForm("AddRoom", "AdminRoom", FormMethod.Post))
{

    <label>Oda Numarası</label>
    <input type="text" asp-for="RoomNumber" class="form-control" />
    <span class="text-danger" asp-validation-for="RoomNumber"></span>
    <br />

    <label>Görsel Yolu</label>
    <input type="text" asp-for="RoomCoverImage" class="form-control" />
    <span class="text-danger" asp-validation-for="RoomCoverImage"></span>
    <br />

    <label> Fiyat </label>
    <input type="text" asp-for="Price" class="form-control" />
    <span class="text-danger" asp-validation-for="Price"></span>
    <br />

    <label> Başlık </label>
    <input type="text" asp-for="Title" class="form-control" />
    <span class="text-danger" asp-validation-for="Title"></span>

    <br />
    <label>Yatak Sayısı</label>
    <input type="text" asp-for="BedCount" class="form-control" />
    <span class="text-danger" asp-validation-for="BedCount"></span>
    <br />
    <label>Banyo  Sayısı</label>
    <input type="text" asp-for="BathCount" class="form-control" />
    <span class="text-danger" asp-validation-for="BathCount"></span>
    <br />
    <label>Wifi durunu</label>
    <input type="text" asp-for="Wifi" class="form-control" />
    <span class="text-danger" asp-validation-for="Wifi"></span>
    <br />
    <label>Açıklama</label>
    <textarea rows="5" class="form-control" asp-for="Desctiption"></textarea>
    <span class="text-danger" asp-validation-for="Desctiption"></span>
    <br />
    <button class="btn btn-outline-info">Oda Ekle</button>
}

