@model List<ContactInboxDto>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="email-left-box">
    <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block"> Yeni Mesaj Oluştur </a>

    <div class="mail-list mt-4">
        <a href="/AdminContact/Inbox/" class="list-group-item border-0 text-primary p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i> <b>Gelen Kutusu </b> <span class="badge badge-primary badge-sm float-right m-t-5">@ViewBag.data</span> </a>
        <a href="/AdminContact/Sendbox/" class="list-group-item border-0 p-r-0 text-success"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i> <b> Giden Kutusu </b>  <span class="badge badge-success badge-sm float-right m-t-5"> @ViewBag.data2 </span></a>
        <a href="" class="list-group-item border-0 p-r-0 text-danger"><i class="fa fa-star-o font-18 align-middle mr-2"></i> <b> Önemli </b>  <span class="badge badge-danger badge-sm float-right m-t-5">35</span></a>
        <a href="#" class="list-group-item border-0 p-r-0 text-warning"><i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i> <b> Taslaklar </b>  <span class="badge badge-warning badge-sm float-right m-t-5">10</span> </a>
        <a href="#" class="list-group-item border-0 p-r-0 text-dark"><i class="fa fa-trash font-18 align-middle mr-2"></i> <b> Çöp Kutusu </b> <span class="badge badge-dark badge-sm float-right m-t-5">20</span> </a>
    </div>

    <h5 class="mt-5 m-b-10"> Kategoriler </h5>
    @await Html.PartialAsync("SideBarAdminContactCategoryPartial");
</div>
<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                Gelen Mesajlar <span class="caret m-l-5"></span>
            </button>
        </div>
    </div>
    <div class="email-list m-t-15">
        @foreach (var item in Model)
        {
            <div class="message">
                <a href="/AdminContact/MessageDetailByInbox/@item.ContactId">
                    <div class="col-mail col-mail-2">
                        <div class="subject">@(string.IsNullOrEmpty(item.Message) || item.Message.Length < 30 ? item.Message : item.Message.Substring(0, 30))  </div>
                        <div class="date">@item.Date.ToShortDateString()</div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
